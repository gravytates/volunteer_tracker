
<div class="row">
  <div class="col-md-6">
    <div class="project">
      <h3><%= @project.name %></h3>
      <form action="/projects/<%= @project.id %>/edit" method="post">
        <input name="_method" type="hidden" value="patch">
        <label for="name">update project name</label>
        <br>
        <input type="text" name="name" required>
        <br><br>
        <button class="btn btn-success" type="submit">edit</button>
      </form>

      <br>

      <form action="/">
        <button type="submit" class="btn btn-info" name="button">back</button>
      </form>

      <br>

      <form action="/projects/<%= @project.id %>/delete" method="post">
        <input name="_method" type="hidden" value="delete">
        <button class="btn btn-danger" type="submit">delete project</button>
      </form>
    </div>
  </div>

  <div class="col-md-6">
    <div class="volunteers">
      <h3>add a volunteer for <em><%= @project.name %></em></h3>
      <form action="/volunteers/new" method="post">
      <input type="hidden" name="project_id" value="<%= @project.id %>">
      <label for="name">name</label>
      <br>
      <input type="text" name="v_name" required>
      <br><br>
      <button class="btn btn-info" type="submit" name="button">add volunteer</button>
    </form>
    <hr>

    <% if @project.volunteers.any? %>
    <p>current volunteers for project</p>

    <ul>
      <% @project.volunteers.each do |volunteer| %>
      <li><a href="/volunteers/<%= volunteer.id() %>"><%= volunteer.name %></a></li>
      <% end %>
    </ul>
    <% end %>
    </div>
  </div>

</div>
